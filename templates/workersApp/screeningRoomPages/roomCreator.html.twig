{% extends 'workersApp/workerBase.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('css/room_view.css')}}" type="text/css">
{% endblock%}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="{{ asset('js/room_creator.js') }}" type="text/javascript"></script>
{% endblock %}

{% block content %}
    <div class="row justify-content-between px-3">
        <div class="">
            <h1 class="mb-3 font-weight-normal">Nowa sala</h1>
        </div>

        <div class="">
            <form method="" class="form-inline">

                <label for="inputRoomNumber" class="mx-sm-2">Numer sali: </label>
                <input type="text" size="3" value="" name="roomnumber" id="inputRoomNumber"
                       class="form-control">

                <label for="inputRowNumber" class="mr-sm-2 ml-sm-5">Liczba rzędów: </label>
                <input type="number" min="5" max="99" step="1" value="10" name="roomnumber" id="inputRowNumber"
                       class="form-control">

                <label for="inputRowNumber" class="mx-sm-2">Liczba pozycji w rzędzie:</label>
                <input type="number" min="5" max="99" step="1" value="10" name="roomnumber" id="inputSeatNumber"
                       class="form-control" >

                <button class="btn btn-primary ml-sm-2" onclick="createRoom()" type="button">
                    Zmień
                </button>
            </form>
        </div>
    </div>

    <div class="content panel justify-center mt-2 mx-0 p-5 bg-light">
        <div class="row justify-content-between px-3">
            <div class="room_view" id="roomContent">
                <script>createRoom()</script>
            </div>
            <div class="content jumbotron mt-2 mx-2 p-4 bg-secondary">
                <h3 class="mb-3">Legenda</h3>
                <form method="" class="form-horizontal">
                    <div class="form-inline mb-2">
                        <button class="seat seat_normal mr-1" id="button1" disabled type=""></button>
                        <label for="button1" class="">Do rezerwacji</label>
                    </div>
                    <div class="form-inline mb-2">
                        <button class="seat seat_buying_only mr-1" id="button2" disabled type=""></button>
                        <label for="button2" class="">Tylko do zakupu</label>
                    </div>
                    <div class="form-inline mb-2">
                        <button class="seat seat_inactive mr-1" id="button3" disabled type=""></button>
                        <label for="button3" class="">Przejście</label>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div class="">
        <p class="mb-1">1. Aby zmienić dostępność rzędu, wciśnij jego numer.</p>
        <p class="mb-1">2. Aby zmienić miejsce w przejście, wciśnij jego pozycję.</p>
        <p id="demo"></p>
    </div>


    <div class="row justify-content-between px-3">
        <div class="">
            <button class="btn btn-primary" type="submit">
                Anuluj
            </button>
        </div>
        <div class="">
            <form>
                <input type="text" hidden="false" id="roomNumber">
                <button class="btn btn-primary ml-sm-2" onclick="dataVerification()" type="submit">
                    Zapisz
                </button>
            </form>
        </div>
    </div>

{% endblock %}