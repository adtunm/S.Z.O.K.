{% extends 'workersApp/workerBase.html.twig' %}
{% block content %}
<div class="row justify-content-center">
    <div class="col-md-9 ">
        <h1>Zmień hasło</h1><br>
        {{ form_start(form) }}
        <div class="form-group row">
            {{ form_label(form.haslo) }}
            <div class="col-sm-10 px-0">
                {% if form.haslo.vars.errors|length > 0 %}
                    {{ form_widget(form.haslo, {'attr': {'class': 'is-invalid form-control'}}) }}
                {% else %}
                    {{ form_widget(form.haslo) }}
                {% endif %}
                <div class="invalid-feedback">
                    {{ form_errors(form.haslo) }}
                </div>
            </div>
        </div>
        {{ form_end(form) }}
        <a class="btn btn-primary" href="{{ path('workers_app/employees/show',{"id":id}) }}" role="button">Wróć</a>
    </div>
</div>


{% endblock %}
