{% extends 'workersApp/workerBase.html.twig' %}

{% block content %}
    <h1>{{ worker.imie }} {{ worker.nazwisko }}</h1>
    {% if worker %}
        <table id="employee" class="table table-hover">
            <tbody>
            <tr>
                <td>Login:</td>
                <td>{{ worker.login }}</td>
            </tr>
            <tr>
                <td>Imię:</td>
                <td>{{ worker.imie }}</td>
            </tr>
            <tr>
                <td>Nazwisko:</td>
                <td>{{ worker.nazwisko }}</td>
            </tr>
            <tr>
                <td>E-mail:</td>
                <td>{{ worker.email }}</td>
            </tr>
            <tr>
                <td>Numer telefonu:</td>
                <td>{{ worker.telefon }}</td>
            </tr>
            <tr>
                <td>Rola:</td>
                <td>{{ worker.role.nazwa }}</td>
            </tr>
            </tbody>
        </table>
        <div id = "options">
            <a class="btn btn-primary" href="{{ path('worker_app/employee/list') }}" role="button">Wróć</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-primary float-right"
                   href="{{ path('workers_app/employee/change_password',{"id":worker.id}) }}" role="button">Resetuj
                    hasło</a>
                <a class="btn btn-primary float-right" style="margin-left: 2px; margin-right: 2px"
                   href="{{ path('workers_app/employee/edit',{"id":worker.id}) }}" role="button">Edytuj</a>
                {#<a class="btn btn-primary float-right"  href="{{ path('workers_app/pracownicy/delete',{"id":worker.id}) }}" role="button">Usuń</a>#}
                <button type="button" id="worker" class="btn btn-danger float-right" data-toggle="modal"
                        data-target="#employeeId{{ worker.id }}">
                    Usuń
                </button>

                <div class="modal fade" id="employeeId{{ worker.id }}" tabindex="-1" role="dialog"
                     aria-labelledby="modelTitleId" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content bg-dark text-light text-left">
                            <div class="modal-header">
                                <h4 class="modal-title" id="modelTitleId">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                    Usuwanie pracownika
                                </h4>
                                <button type="button" class="close text-light" data-dismiss="modal"
                                        aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Czy napewno chcesz usunąć tego pracownika?
                                <ul>
                                    <li>
                                        Rola: {{ worker.role.nazwa }}
                                    </li>
                                    <li>
                                        Login: {{ worker.login }}
                                    </li>
                                    <li>
                                        Imie: {{ worker.imie }}
                                    </li>
                                    <li>
                                        Nazwisko:{{ worker.nazwisko }}
                                    </li>

                                </ul>
                                Akcji tej nie da sie odwrócić.
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                    Anuluj
                                </button>
                                <button type="button" class="btn btn-danger delete-employee"
                                        data-id="{{ worker.id }}">
                                    <i id="spinner{{ worker.id }}"></i> Usuń
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    {% endif %}

        {% if is_granted('ROLE_MANAGER') or is_granted('ROLE_ADMIN') %}
            <script>
                const employee = document.getElementById('options');
                if (employee) {
                    console.log(employee);
                    employee.addEventListener('click', e => {
                        if (e.target.className === 'btn btn-danger delete-employee') {
                            const id = e.target.getAttribute('data-id');
                            e.target.setAttribute('disabled', 'true');
                            document.getElementById('spinner' + id).setAttribute('class', 'fa fa-spinner fa-spin');

                            fetch(`{{ path('workers_app/employee/delete') }}/${id}`,
                                {method: 'DELETE'}
                            ).then(res => window.location.reload());
                            location.href = "{{ path('worker_app/employee/list') }}";
                        }
                    })
                }
            </script>
        {% endif %}
    {% else %}
        <h1>Brak danych</h1>
    {% endif %}


{% endblock %}