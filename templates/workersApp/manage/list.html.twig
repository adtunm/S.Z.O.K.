{% extends 'workersApp/workerBase.html.twig' %}

{% block content %}
    <div class="row pb-4 mt-0">
    <div class="h1 col-md">Lista Pracowników</div>
        {% if is_granted('ROLE_ADMIN') %}
            <div class="col-md">
                <a href="{{ path("workers_app/manage/new") }}" class="btn btn-primary pull-right">Dodaj nowego
                    pracownika</a>
            </div>
        {% endif %}
        </div>
    {% if workerList %}
        <div style="overflow-x: auto ">
            <table id="articles" class="table">
                <thead>
                <tr>
                    <th style="width: 10%">Id</th>
                    <th style="width: 20%">Imię</th>
                    <th style="width: 20%">Nazwisko</th>
                    <th style="width: 20%">Rola</th>
                    <th style="width: 10%"></th>
                </tr>
                </thead>
                <tbody>
                {% set x=0 %}
                {% for worker in workerList  %}

                    <tr>
                        <td>{{ worker.id }}</td>
                        <td>{{ worker.imie }}</td>
                        <td>{{ worker.nazwisko }}</td>
                        <td>{{ worker.role.nazwa }}  </td>
                        <td>
                            <a href="{{ path('workers_app/pracownicy/show',{"id":worker.id}) }}"
                               class="btn btn-primary float-right btn-sm">Pokaż</a>
                        </td>
                    </tr>

                {% endfor %}

                </tbody>
            </table>
        </div>

        {% set basePath = path('worker_app/pracownicy/list') %}
        {% include 'workersApp/inc/pagination.html.twig' %}

        {#{% if  x == 10 %}#}
            {#<a href="{{ path('worker_app/pracownicy/list',{"page":page+2}) }}" class="btn btn-primary float-right"#}
               {#style="margin-left: 2px">Dalej</a>#}
        {#{% endif %}#}
        {#{% if page > 0 %}#}
            {#<a href="{{ path('worker_app/pracownicy/list',{"page":page}) }}"#}
               {#class="btn btn-primary float-right">Wstecz</a>#}
        {#{% endif %}#}
    {% else %}
        <p>Brak Pracowników</p>
    {% endif %}
{% endblock %}