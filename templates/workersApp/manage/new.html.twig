{% extends 'workersApp/workerBase.html.twig' %}
{% block content %}
    <div class="row justify-content-center">
        <div class="col-md-9 ">
            <div class="h1 col-md">Dodaj nowego pracownika<br><br></div>
            {% if errors %}
                <div class="alert alert-primary" id="error">
                    {% for error in errors %}
                        <li>{{ error.error }}</li>
                    {% endfor %}
                </div>
            {% endif %}
            {{ form_start(form) }}
            <div class="form-group row">
                {{ form_label(form.role) }}
                <div class="col-sm-10">
                    {{ form_widget(form.role) }}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.login) }}
                <div class="col-sm-10">
                    {{ form_widget(form.login) }}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.haslo) }}
                <div class="col-sm-10">
                    {{ form_widget(form.haslo) }}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.imie) }}
                <div class="col-sm-10">
                    {{ form_widget(form.imie) }}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.nazwisko) }}
                <div class="col-sm-10">
                    {{ form_widget(form.nazwisko) }}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.email) }}
                <div class="col-sm-10">
                    {{ form_widget(form.email) }}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.telefon) }}
                <div class="col-sm-10">
                    {{ form_widget(form.telefon) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}