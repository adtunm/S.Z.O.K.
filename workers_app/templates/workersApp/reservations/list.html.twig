{% extends 'workersApp/workerBase.html.twig' %}

{% block content %}
    <div class="row justify-content-between px-3 mb-3">
        <div>
            <h1 class="mb-3 font-weight-normal">Rezerwacje</h1>
        </div>
    </div>
    <form method="post" class="form">
        <div class="row pl-2 pr-4 mb-3">
            <div class="form-inline">
                <label for="date" class="mx-sm-2">Dzień: </label>
                <input type="date" name="date" id="date"
                       class="form-control" value="{% if values %}{{ values.date }}{% endif %}"
                       onkeypress=''>
            </div>
        </div>
        <div class="row justify-content-between pl-2 pr-4 mb-3">
            <div class="form-inline">
                <label for="number" class="mx-sm-2">Numer: </label>
                <input type="number" name="number" id="number"
                       class="form-control" value="{% if values %}{{ values.number }}{% endif %}"
                       onkeypress='return event.charCode >= 48 && event.charCode <= 57'>
                <label for="name" class="mx-sm-2 ">Imię: </label>
                <input type="text" name="name" id="name"
                       class="form-control" value="{% if values %}{{ values.name }}{% endif %}"
                       onkeypress='return event.charCode >= 65 && event.charCode <= 90 || event.charCode >= 97 && event.charCode <= 122'>
                <label for="surname" class="mx-sm-2">Nazwisko:</label>
                <input type="text" name="surname" id="surname"
                       class="form-control" value="{% if values %}{{ values.surname }}{% endif %}"
                       onkeypress='return event.charCode >= 65 && event.charCode <= 90 || event.charCode >= 97 && event.charCode <= 122'>
                <button class="btn btn-primary ml-sm-2" id="filtrButton" type="submit">
                    Filtruj
                </button>

            </div>
            <div>
                <a class="btn btn-primary"
                   href="">Pokaż wszystkie</a>
            </div>
        </div>
    </form>
    {% if reservations %}
        <div style="overflow-x: auto;">
            <table id="reservations" class="table">
                <thead>
                <tr>
                    <th style="width: 20%">Numer rezerwacji</th>
                    <th style="width: 25%">Imię i nazwisko</th>
                    <th style="width: 25%">Seans</th>
                    <th style="width: 30%"></th>
                </tr>
                </thead>
                <tbody>
                {% for reservation in reservations %}
                    <tr>
                        <td scope="row">{{ reservation.id }} </td>
                        <td>{{ reservation.imie }} {{ reservation.nazwisko }}</td>
                        <td>{{ reservation.seans }}</td>
                        <td>
                            <div class="pull-right">
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-danger btn-sm" data-toggle="modal"
                                        data-target="#reservationId{{ reservation.id }}">
                                    Anuluj
                                </button>
                                <!-- Modal -->
                                <div class="modal fade" id="reservationId{{ reservation.id }}" tabindex="-1"
                                     role="dialog"
                                     aria-labelledby="modelTitleId" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content bg-dark text-light text-left">
                                            <div class="modal-header">
                                                <h4 class="modal-title" id="modelTitleId">
                                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                                    Anulowanie rezerwacji
                                                </h4>
                                                <button type="button" class="close text-light"
                                                        data-dismiss="modal"
                                                        aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                Czy napewno chcesz anulować rezerwacje {{ reservation.id }}?
                                                <ul>
                                                    <li>
                                                        Imię i
                                                        nazwisko: {{ reservation.imie }} {{ reservation.nazwisko }}
                                                    </li>
                                                    <li>
                                                        Seans: {{ reservation.seans }}
                                                    </li>
                                                </ul>
                                                Akcji tej nie da sie odwrócić.
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                        data-dismiss="modal">
                                                    Anuluj
                                                </button>
                                                <button type="button" class="btn btn-danger delete-reservation"
                                                        data-id="{{ reservation.id }}">
                                                    <i id="spinner{{ reservation.id }}"></i> Anuluj
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- End of Modal -->
                                <a class="btn btn-primary btn-sm"
                                   href="">Zrealizuj</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        {# remember to set basePath before including pagination #}
        {% set basePath = path('workers_app/reservations') %}
        {% include 'workersApp/inc/pagination.html.twig' %}

        {% if is_granted('ROLE_ADMIN') %}
            <script>
                const reservation = document.getElementById('reservations');
                if (reservation) {
                    reservation.addEventListener('click', e => {
                        if (e.target.className === 'btn btn-danger delete-reservation') {
                            const id = e.target.getAttribute('data-id');
                            e.target.setAttribute('disabled', 'true');
                            document.getElementById('spinner' + id).setAttribute('class', 'fa fa-spinner fa-spin');

                            fetch(`{{ path('workers_app/reservations/delete') }}/${id}`,
                                {method: 'DELETE'}
                            ).then(res => window.location.reload());
                        }
                    })
                }
            </script>
        {% endif %}
    {% else %}
        <p class="h1">Brak rezerwacji</p>
    {% endif %}
{% endblock %}